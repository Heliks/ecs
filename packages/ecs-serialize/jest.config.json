{
  "collectCoverageFrom": [
    "./src/index.ts"
  ],
  "setupFilesAfterEnv": [
    "./src/__test__/setup.ts"
  ],
  "transform": {
    "^.+\\.(t)sx?$": "ts-jest"
  },
  "testMatch": [
    "**/*.spec.ts"
  ],
  "modulePathIgnorePatterns": [
    "node_modules"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "jsx",
    "json",
    "node",
    "js"
  ]
}

