{
  "name": "ecs",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-unicorn": "^20.1.0",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "lint": "eslint \"packages/**/src/**/*.ts\" --config .eslintrc.json",
    "link": "lerna link",
    "test": "jest --config jest.config.json",
    "build": "lerna run --stream --sort build",
    "build:clean": "rimraf packages/*/*/lib",
    "build:watch": "lerna run build:watch --no-prefix --parallel",
    "clean": "lerna clean && rimraf && rm -rf node_modules",
    "publish": "yarn build:clean && yarn build && lerna publish"
  }
}
