{
  "devDependencies": {
    "@types/jest": "29.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "jest": "29.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "29.0.2",
    "typescript": "^4.3.5"
  },
  "name": "ecs",
  "private": true,
  "publishConfig": {
    "registry": "http://193.31.26.163:4873/"
  },
  "scripts": {
    "build": "pnpm clean:builds && pnpm -r --sort run build",
    "build:watch": "pnpm -r --no-sort build:watch",
    "clean:builds": "rimraf ./packages/*/lib",
    "clean:deps": "rimraf packages/*/node_modules && rimraf node_modules",
    "clean": "pnpm clean:builds && pnpm clean:deps",
    "lint": "eslint packages/**/*.ts --config .eslintrc.json",
    "publish": "yarn build && npx lerna publish --registry=http://193.31.26.163:4873/",
    "test": "pnpm -r test"
  },
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ]
}
