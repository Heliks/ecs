{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "outDir": "lib/",
    "baseUrl": "./src",
    "removeComments": false,
    "types": [
      "jest",
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__test__/**/*",
    "lib"
  ]
}

