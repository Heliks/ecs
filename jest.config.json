{
  "collectCoverageFrom": [
    "./src/**/*.ts"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testMatch": [
    "**/*.spec.ts"
  ],
  "setupFiles": [
    "<rootDir>/src/__test__/setup.ts"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
